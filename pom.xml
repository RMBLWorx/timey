					<!-- <rules> -->
					<!-- <rule> -->
					<!-- <element>CLASS</element> -->
					<!-- <excludes> -->
					<!-- <exclude>*Test</exclude> -->
					<!-- </excludes> -->
					<!-- <limits> -->
					<!-- <limit> -->
					<!-- <counter>LINE</counter> -->
					<!-- <value>COVEREDRATIO</value> -->
					<!-- <minimum>0.50</minimum> -->
					<!-- </limit> -->
					<!-- </limits> -->
					<!-- </rule> -->
					<!-- </rules> -->
					<!-- </configuration> -->
					<!-- </execution> -->
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
